<%- include('../partials/head.ejs') %>
<body>
 <%- include('../partials/nav.ejs') %>
    <div class="container" id="movie-details">
      <h1 id="title"></h1>
      <h5 id="tagline"></h5>
      <div class="row">
        <div id="poster" class="col s5"></div>
        <div class="col s5" id="details">
          <h4 id="year"></h4>
          <div id="genres"></div>
          <p id="synopsis"></p>
          <div id="comments">
            <form id="comment-form" method="POST" action="/movies/">
              <div class="input-field col s6">
                <input id="comment" type="text" name="comment" />
                <label class="active" for="comment">Write comment here:</label>
                <button
                  class="btn waves-effect waves-light left-align"
                  type="submit"
                  name="action"
                >
                  Submit
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
    <%- include('../partials/footer.ejs') %>
    <script>
      // this may display as an error in VSCode, please visit here for bug details: https://github.com/microsoft/vscode/issues/51118
      const id = <%= movie_id %>
    </script>
    <!-- Our JavaScript -->
    <script src="/js/singleMovie.js"></script>
  </body>
</html>
